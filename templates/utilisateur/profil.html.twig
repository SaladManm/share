{% extends 'base.html.twig' %}

{% block title %}
    Profil - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center text-primary">Profil</h1>
        <div class="row justify-content-center">
            <div class="col-md-6 bg-white p-4 border rounded">
                <ul class="list-unstyled">
                    <li><strong>Email :</strong> {{ user.email |capitalize  }}</li>
                    <li><strong>Nom :</strong> {{ user.nom |capitalize  }}</li>
                    <li><strong>P :</strong> {{ user.prenom |capitalize  }}</li>
                    <li><strong>Date d'inscription :</strong> {{ user.dateInscription | date('d-m-Y') }}</li>
                    <li><strong>Rôle :</strong> 
                        {% if 'ROLE_ADMIN' in user.roles %}
                            Administrateur
                        {% elseif 'ROLE_MOD' in user.roles %}
                            Modérateur
                        {% else %}
                            Utilisateur
                        {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}