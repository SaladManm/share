{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} Confirmation de suppression
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center text-danger mt-4 pt-4 display-1 fw-bold">
            Confirmation de suppression</h1>
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 bg-white p-4 m-0 text-danger text-center">
                <p>Êtes-vous sûr de vouloir supprimer la sous-catégorie "{{ scategorie.libelle | capitalize }}" ?</p>
                <p>Cette action est irréversible.</p>
                
                <form method="post" action="{{ path('app_supprimer_scategorie', {'id': scategorie.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ scategorie.id) }}">
                    <button type="submit" class="btn btn-danger">Oui, supprimer</button>
                </form>

                <a href="{{ path('app_liste_scategorie') }}" class="btn btn-secondary">Annuler</a>
            </div>
        </div>
    </div>
{% endblock %}
